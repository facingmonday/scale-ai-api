      "type": "node",
      "request": "launch",
      "name": "Run Stripe",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "console": "integratedTerminal",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run",
        "stripe"
      ]
