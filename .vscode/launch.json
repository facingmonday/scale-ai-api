      "skipFiles": [
        "<node_internals>/**"
      ],
      "console": "integratedTerminal",
      "program": "${workspaceFolder}/apps/api/index.js",
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Ticketing",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "console": "integratedTerminal",
      "program": "${workspaceFolder}/apps/ticketing/index.js",
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch QR Codes",
